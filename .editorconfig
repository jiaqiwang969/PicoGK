root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.cs]
indent_style = space
indent_size = 4

[*.csproj]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
